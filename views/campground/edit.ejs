<% layout('layout/boilerplate') -%>

    <section class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <h4 class="text-center fw-bold">Edit Campground</h4>
                <form action="/campground/<%= campground._id %>?_method=PUT" class="needs-validation" method="POST"
                    novalidate enctype="multipart/form-data">
                    <div class="mb-2">
                        <label for="title" class="form-label m-0">Title</label>
                        <input type="text" class="form-control" name="campground[title]" value="<%= campground.title %>"
                            id="title" required />
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a valid city.
                        </div>
                    </div>
                    <div class="mb-2">
                        <label for="location" class="form-label m-0">Location</label>
                        <input type="text" class="form-control" name="campground[location]"
                            value="<%= campground.location %>" id="location" required />
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a valid city.
                        </div>
                    </div>
                    <div class="mb-2">
                        <label for="description" class="form-label m-0">Description</label>
                        <input type="text" class="form-control" name="campground[description]"
                            value="<%= campground.description %>" id="description" required />
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a valid city.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label m-0">Price</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text" id="inputGroupPrepend"><svg
                                    xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-currency-dollar" viewBox="0 0 16 16">
                                    <path
                                        d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23-3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17-1.94-.8-2.131-1.718zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704-1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769 0 1.097-.826 1.828-2.2 1.939V8.73z" />
                                </svg></span>
                            <input type="number" name="campground[price]" class="form-control"
                                value="<%= campground.price %>" id="price" aria-describedby="inputGroupPrepend"
                                required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please provide a valid city.
                            </div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label for="image" class="form-label m-0">Image(s)</label>
                        <div class="input-group has-validation">
                            <input type="file" class="form-control" name="images" id="image"
                                aria-describedby="inputGroupPrepend" multiple required />
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please provide a valid price.</div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="/campground/all" class="btn btn-primary">All campgrounds</a>
                </form>
            </div>
            <div class="col"></div>
        </div>
    </section>
    </form>