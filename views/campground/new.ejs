<% layout('layout/boilerplate') -%>
    <section class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <h2 class="text-center">Add Campground</h2>
                <form action="/campground" method="POST">
                    <div class="mb-2">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" name="campground[title]" id="title" />
                    </div>
                    <div class="mb-2">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" class="form-control" name="campground[location]" id="location" />
                    </div>
                    <div class="mb-2">
                        <label for="description" class="form-label">Description</label>
                        <input type="text" class="form-control" name="campground[description]" id="description" />
                    </div>
                    <div class="mb-2">
                        <label for="imageurl" class="form-label">ImageURL</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text" id="inputGroupPrepend"><svg
                                    xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-link" viewBox="0 0 16 16">
                                    <path
                                        d="M6.354 5.5H4a3 3 0 0 0 0 6h3a3 3 0 0 0 2.83-4H9q-.13 0-.25.031A2 2 0 0 1 7 10.5H4a2 2 0 1 1 0-4h1.535c.218-.376.495-.714.82-1z" />
                                    <path
                                        d="M9 5.5a3 3 0 0 0-2.83 4h1.098A2 2 0 0 1 9 6.5h3a2 2 0 1 1 0 4h-1.535a4 4 0 0 1-.82 1H12a3 3 0 1 0 0-6z" />
                                </svg></span>
                            <input type="text" class="form-control" name="campground[image]" id="imageurl"
                                aria-describedby="inputGroupPrepend" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text" id="inputGroupPrepend">$</span>
                            <input type="text" class="form-control" id="price" aria-describedby="inputGroupPrepend"
                                required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="/campgrounds" class="btn btn-primary">All campgrounds</a>
                </form>
            </div>
            <div class="col"></div>
        </div>
    </section>