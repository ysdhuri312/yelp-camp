<% layout('layout/boilerplate') -%>

    <section class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <h2 class="text-center">Edit Campground</h2>
                <form action="/campground/<%= campground._id %>/edit?_method=PUT" method="POST">
                    <div class="mb-2">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" name="campground[title]" value="<%= campground.title %>"
                            id="title" />
                    </div>
                    <div class="mb-2">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" class="form-control" name="campground[location]"
                            value="<%= campground.location %>" id="location" />
                    </div>
                    <div class="mb-2">
                        <label for="description" class="form-label">Description</label>
                        <input type="text" class="form-control" name="campground[description]"
                            value="<%= campground.description %>" id="description" />
                    </div>
                    <div class="mb-2">
                        <label for="imageurl" class="form-label">ImageURL</label>
                        <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>"
                            id="imageurl" />
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text" id="inputGroupPrepend">$</span>
                            <input type="text" class="form-control" value="<%= campground.price %>" id="price"
                                aria-describedby="inputGroupPrepend" required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="/campgrounds" class="btn btn-primary">All campgrounds</a>
                </form>
            </div>
            <div class="col"></div>
        </div>
    </section>
    </form>